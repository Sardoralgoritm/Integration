@model List<PersonnelRecord>
@{
    ViewData["Title"] = "Personnel Records Import";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

<div class="container my-4">
    <h1 class="mb-4">Personnel Records Management</h1>

    <!-- Import Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="h5 mb-3">Import Personnel Records</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-controller="Home" asp-action="ImportFile" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="file" class="form-label">Select CSV File:</label>
                    <input type="file" id="file" name="file" class="form-control" accept=".csv" required />
                </div>
                <button type="submit" class="btn btn-primary">Import Records</button>
            </form>
        </div>
    </div>

    <!-- Grid Section -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h5 mb-3">Personnel Records (Total: @Model.Count)</h2>
            <div class="table-responsive">
                <table id="personnelTable" class="table table-striped table-bordered table-hover w-100">
                    <thead class="table-dark">
                        <tr>
                            <th>Payroll Number</th>
                            <th>Forenames</th>
                            <th>Surname</th>
                            <th>Date of Birth</th>
                            <th>Telephone</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Address 2</th>
                            <th>Postcode</th>
                            <th>Email</th>
                            <th>Start Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.PayrollNumber</td>
                                <td>@record.Forenames</td>
                                <td>@record.Surname</td>
                                <td>@record.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td>@record.Telephone</td>
                                <td>@record.Mobile</td>
                                <td>@record.Address</td>
                                <td>@record.Address2</td>
                                <td>@record.Postcode</td>
                                <td>@record.EmailHome</td>
                                <td>@record.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@record.Id"
                                       class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function() {
        $('#personnelTable').DataTable({
            order: [[2, 'asc']], // surname bo‘yicha sort
            pageLength: 25,
            responsive: true,
            language: {
                search: "Search records:",
                lengthMenu: "Show _MENU_ records per page",
                info: "Showing _START_ to _END_ of _TOTAL_ records",
                paginate: {
                    first: "First",
                    last: "Last",
                    next: "Next",
                    previous: "Previous"
                }
            }
        });
    });
</script>
